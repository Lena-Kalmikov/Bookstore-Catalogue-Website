@model WebProjectLena.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="AccountLogin" content="width=device-width" />
        <title>Create</title>
    </head>
    <body>
        <div class="row d-flex justify-content-center">
            <div class="col-lg-7">
                <h2>This is a restricted area</h2>
                <h3>Enter your admin credentials:</h3>
                <div>
                    <form method="post" asp-action="Login" id="addBook">
                        <div class="row lg-5">
                            <div class="form-group col-lg-6">
                                <label asp-for="Username">Username</label>
                                <input asp-for="Username" class="form-control"/>
                            </div>
                        </div>
                        <div class="row lg-5">
                            <div class="form-group col-lg-6">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" class="form-control"/>
                            </div>
                        </div>
                        <div class="row lg-5">
                            <div class="form-group col-lg-6">
                                <input type="submit" value="Login" id="admin_book" class="btn btn-outline-primary" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>