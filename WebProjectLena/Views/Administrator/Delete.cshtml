@model BookModel

@{
    ViewData["Title"] = "Delete Book";
}
<!DOCTYPE html>

<html>
	<head>
		<meta name="AdminDelete" content="width=device-width" />
		<title>Delete</title>
	</head>
	<body>
		<div class="row d-flex justify-content-center">
			<div class="col-lg-9">
				<h3>Are you sure you want to delete this book?</h3>
				<br>
				<div id="admin_delete_book">
					<table class="table">
						<tbody>
							<tr>
								<td><img src="~/images/@ViewBag.Book.ImageName"/></td>
								<td>
									<dl class="row">
										<dt class="col-sm-2">Title:</dt>
										<dd class="col-sm-10">@ViewBag.Book.Title</dd>
										<dt class="col-sm-2">Author:</dt>
										<dd class="col-sm-10">@ViewBag.Book.Author</dd>
										<dt class="col-sm-2">Release Year:</dt>
										<dd class="col-sm-10">@ViewBag.Book.ReleaseYear</dd>
										<dt class="col-sm-2">Description:</dt>
										<dd class="col-sm-10">@ViewBag.Book.Description</dd>
									</dl>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
				<form asp-action="Delete">
					<input type="submit" value="Delete" class="btn btn-outline-danger"/>
					<a asp-action="Index" class="btn btn-outline-primary">Cancel</a>
				</form>
			</div>
		</div>
	</body>
</html>